{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/src/*"],
      "@gateway/*": ["./gateway/src/*"],
      "@user-service/*": ["./services/user-service/src/*"],
      "@session-service/*": ["./services/session-service/src/*"],
      "@content-service/*": ["./services/content-service/src/*"],
      "@billing-service/*": ["./services/billing-service/src/*"],
      "@webrtc-server/*": ["./services/webrtc-server/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/node_modules",
    "**/dist",
    "**/build"
  ]
}