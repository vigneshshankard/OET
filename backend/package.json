{
  "name": "oet-praxis-backend",
  "version": "1.0.0",
  "description": "OET Praxis Backend - Microservices Architecture",
  "private": true,
  "workspaces": [
    "gateway",
    "services/*",
    "ai-services",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=gateway\" \"npm run dev --workspace=services/user-service\" \"npm run dev --workspace=services/session-service\" \"npm run dev --workspace=services/content-service\" \"npm run dev --workspace=services/billing-service\" \"npm run dev --workspace=services/webrtc-server\"",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:all": "jest --projects=gateway services/* ai-services shared",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "setup:dev": "./scripts/setup-dev.sh",
    "migrate:db": "./scripts/migrate-db.sh",
    "seed:data": "./scripts/seed-data.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:undeploy": "kubectl delete -f k8s/"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.19.17",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "concurrently": "^8.2.1",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "OET Praxis Team",
  "license": "MIT"
}
